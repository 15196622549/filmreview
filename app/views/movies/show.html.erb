<div class= "col-md-12">
  <div class="movie">

  <span class="pull-right">
    <% if current_user && current_user.is_fan_of?(@movie) %>
       <label class="label label-succsess">收藏</label>
    <% else %>
       <lable class="label label-warning">取消收藏</label>
    <% end %>
  </span>

    <%= link_to("我要评论", new_movie_review_path(@movie), class: "btn btn-primary pull-right")%>
    <% if current_user && current_user == @movie.user %>
    <%= link_to("编辑", edit_movie_path(@movie), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @movie.title %></h2>
  <p><%= @movie.description %> </p>
</div>
