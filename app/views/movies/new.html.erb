<div class="col-md-4 col-md-offset-4">
  <h2>新建电影🎬</h2>
  <hr>
  <%= form_for @movie do |f| %>

  <% if @movie.errors.any? %>
  <ul>
  <% @movie.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
  <% end %>


  影片名
  <%= f.text_field :title %>
  <br>
  剧情介绍
  </br>
  <%= f.text_area :description %>
  <br>

  <%= f.submit "提交", :disable_with => '提交中...' %>
  <% end %>
</div>
